<h1>编辑帖子</h1>

<% if error_messages_for :post %>
	  <div id="error"><%= error_messages_for :post %></div>
<%end%>

<h2>主题：<%= @post.topic.name%> </h2>

<% form_for :post, :url => forum_topic_post_path( :id => @post,
                                                  :forum_id =>  @post.topic.forum,
                                                  :topic_id => @post.topic),
                                                  :html => {:method => :put} do |f| %>
    <p>帖子内容：<%= f.text_area :body, :rows => 8, :cols => 60 %></p>
    <%= f.submit "编辑" %>
    <%= link_to "返回", forum_topics_path(:id => @post.topic, :forum_id => @post.topic.forum)%>
<% end %>

