   <fieldset>
		<% remote_form_for(:experience, :url => {:controller => 'experiences',:action => 'createeducation'}, :html => {} ) do  %>
			<div><label>大学：</label><%= text_field_tag :educationname,nil, {:onfocus => "($(this).className = 'text_normal')",:onblur => "($(this).className = 'text_login')",:class => "text_login"} %></div>
            <div><label>毕业时间：</label><%= select_tag :educationyear,year_option_tag("毕业时间")%>年</div>
            <div><label>专业：</label><%= text_field_tag :educationprofessional,nil, {:onfocus => "($(this).className = 'text_normal')",:onblur => "($(this).className = 'text_login')",:class => "text_login"} %></div>
            <div><label>学历/学位：</label><%= text_field_tag :educationdegree,nil, {:onfocus => "($(this).className = 'text_normal')",:onblur => "($(this).className = 'text_login')",:class => "text_login"} %></div>
			<div><label></label><%= submit_tag '确定',{:class=>"btn_blue"}%></div>
		<% end %>
	</fieldset>