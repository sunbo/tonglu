<tr class="<%= cycle('odd', 'even') %>">
   <td><%=h user.login %></td>
   <td><%=h user.email %></td>
   <td><%= user.enabled ? '正常' : '锁定' %>
     <% unless user == current_user %>
       <% if user.enabled %>
         <%= link_to('锁定', user_path(user.id), :method => :delete) %>
       <% else %>
         <%= link_to('解封', enable_user_path(user.id), :method => :put) %>
       <% end %>
     <% end %>
   </td>
   <td align="center"><%= link_to '编辑权限', user_roles_path(user),{:class=>"s_btn_g"} %></td>
 </tr>